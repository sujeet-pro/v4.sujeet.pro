---
import Layout from "@/layout/layout.astro"
import Profile from "@/components/profile.astro"
import SeriesItem from "@/components/series-item.astro"
import Link from "@/components/link.astro"
import { getFeaturedSeries } from "@/utils/content-series.utils"

const featuredSeries = await getFeaturedSeries()
---

<Layout
  title="Sujeet Jaiswal - Frontend Principal Engineer"
  description="Sujeet Jaiswal is a Frontend Principal Engineer crafting exceptional user experiences through innovative frontend architecture and scalable design systems."
  crumbs={null}
  pageType="default"
>
  <Profile />

  {
    featuredSeries.length > 0 && (
      <section class="my-16 md:my-24">
        <div class="mb-8 flex items-center justify-between gap-4">
          <h2 class="text-3xl font-light md:text-4xl">Featured Series</h2>
          <Link href="/series" class="text-sm font-medium">
            View All â†’
          </Link>
        </div>
        <ul class="space-y-4">
          {featuredSeries.map((series) => (
            <SeriesItem series={series} />
          ))}
        </ul>
      </section>
    )
  }
</Layout>
