---
import Item from "@/components/item.astro"
import Link from "@/components/link.astro"
import Layout from "@/layout/layout.astro"
import { getCategoriesForType } from "@/utils/content-categories-generic.utils"
import { getWriting } from "@/utils/content-writing.utils"
import type { ContentItemWithoutContent } from "@/utils/content.type"

const writing = await getWriting()
const itemsWithoutContent = writing.map(({ Content: _, ...rest }) => rest) as ContentItemWithoutContent[]
const categories = await getCategoriesForType("writing", itemsWithoutContent)
const crumbs = null
---

<Layout title="Writing" description="Technical blogs, tutorials, and deep dives" {crumbs} pageType="default">
  <h1 class="page-title">Writing</h1>
  <p class="page-description">Technical blogs, tutorials, and deep dives on web development.</p>

  <!-- Categories -->
  <section class="mb-12">
    <h2 class="section-title">Browse by Category</h2>
    <div class="grid gap-3 md:grid-cols-2 lg:grid-cols-3">
      {
        categories.map((cat) => (
          <Link href={cat.href} class="category-card">
            <h3 class="category-card-title">{cat.name}</h3>
            <p class="category-card-count">{cat.items.length} {cat.items.length === 1 ? "article" : "articles"}</p>
          </Link>
        ))
      }
    </div>
  </section>

  <!-- All Entries -->
  <section>
    <h2 class="section-title">All Articles</h2>
    {
      writing.length > 0 ? (
        <ul class="flex flex-col">
          {writing.map((item) => (
            <Item item={item} />
          ))}
        </ul>
      ) : (
        <p class="text-muted">No articles yet. Check back soon!</p>
      )
    }
  </section>
</Layout>
