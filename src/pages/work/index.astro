---
import Item from "@/components/item.astro"
import Layout from "@/layout/layout.astro"
import { getWork } from "@/utils/content-work.utils"

const work = await getWork()
const crumbs: { title: string; href: string }[] = []
---

<Layout title="Work" description="Design docs, architecture diagrams, and case studies" {crumbs} pageType="default">
  <h1>Work</h1>
  <p class="text-muted-foreground mb-8">Design docs, architecture diagrams, and case studies</p>
  <ul class="flex flex-col">
    {work.map((item) => <Item item={item} />)}
  </ul>
</Layout>
