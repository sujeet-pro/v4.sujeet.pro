---
import Layout from "@/layout/layout.astro"
import sujeetImage from "@/assets/sujeet.jpg"
import Link from "@/components/ui/link.astro"
import { Icon } from "astro-icon/components"
---

<Layout
  title="Page Not Found - Sujeet Jaiswal"
  description="The page you're looking for doesn't exist. Search for content or browse all articles."
  crumbs={null}
  pageType="default"
  noIndex={true}
>
  <section class="not-found">
    <div class="not-found-container">
      <div class="not-found-image-wrapper">
        <img src={sujeetImage.src} alt="Sujeet Jaiswal" class="not-found-image" />
      </div>

      <div class="not-found-header">
        <h1 class="not-found-code">404</h1>
        <h2 class="not-found-title">Page Not Found</h2>
      </div>

      <div class="not-found-message">
        <p class="not-found-text">
          The page you're looking for doesn't exist or has been moved. Try searching for what you need or browse all
          articles.
        </p>
      </div>

      <div class="not-found-actions">
        <Link href="/articles" class="btn-primary">
          <Icon name="carbon:blog" class="icon-md" />
          All Articles
        </Link>
        <Link href="/" class="btn-outline">
          <Icon name="carbon:home" class="icon-md" />
          Home
        </Link>
      </div>
    </div>
  </section>
</Layout>

<style is:global>
  @reference "tailwindcss";

  .not-found {
    @apply flex items-center justify-center py-20 md:py-28;
  }

  .not-found-container {
    @apply flex flex-col items-center text-center;
    animation: fadeInUp var(--transition-slow) forwards;
  }

  .not-found-image-wrapper {
    @apply mb-8;
  }

  .not-found-image {
    @apply h-28 w-28 rounded-full object-cover;
    border: 3px solid var(--color-border);
    box-shadow: var(--shadow-lg);
  }

  .not-found-header {
    @apply mb-6;
  }

  .not-found-code {
    @apply text-7xl font-light md:text-8xl;
    color: var(--color-text-muted);
    opacity: 0.5;
  }

  .not-found-title {
    @apply mt-3 text-2xl font-normal md:text-3xl;
    color: var(--color-text);
  }

  .not-found-message {
    @apply mb-10 max-w-md;
  }

  .not-found-text {
    @apply text-base leading-relaxed;
    color: var(--color-text-muted);
  }

  .not-found-actions {
    @apply flex flex-wrap items-center justify-center gap-4;
  }
</style>
