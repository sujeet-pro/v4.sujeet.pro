---
import Layout from "@/layout/layout.astro"
import sujeetImage from "@/assets/sujeet.jpg"
import Link from "@/components/link.astro"
import { Icon } from "astro-icon/components"
---

<Layout
  title="Page Not Found - Sujeet Jaiswal"
  description="The page you're looking for doesn't exist. Search for content or browse all articles."
  crumbs={null}
  pageType="default"
  noIndex={true}
>
  <section class="not-found">
    <div class="not-found-container">
      <div class="not-found-image-wrapper">
        <img
          src={sujeetImage.src}
          alt="Sujeet Jaiswal"
          class="not-found-image"
        />
      </div>

      <div class="not-found-header">
        <h1 class="not-found-code">404</h1>
        <h2 class="not-found-title">Page Not Found</h2>
      </div>

      <div class="not-found-message">
        <p class="not-found-text">
          The page you're looking for doesn't exist or has been moved.
          Try searching for what you need or browse all articles.
        </p>
      </div>

      <div class="not-found-actions">
        <Link href="/search" class="btn-primary">
          <Icon name="carbon:search" class="icon-md" />
          Search
        </Link>
        <Link href="/posts" class="btn-outline">
          <Icon name="carbon:blog" class="icon-md" />
          All Posts
        </Link>
        <Link href="/" class="btn-outline">
          <Icon name="carbon:home" class="icon-md" />
          Home
        </Link>
      </div>
    </div>
  </section>
</Layout>

<style is:global>
  @reference "tailwindcss";

  .not-found {
    @apply flex items-center justify-center py-16 md:py-24;
  }

  .not-found-container {
    @apply flex flex-col items-center text-center;
  }

  .not-found-image-wrapper {
    @apply mb-6;
  }

  .not-found-image {
    @apply h-24 w-24 rounded-full object-cover;
    border: 3px solid var(--color-border);
  }

  .not-found-header {
    @apply mb-4;
  }

  .not-found-code {
    @apply text-6xl font-bold md:text-8xl;
    color: var(--color-text-muted);
  }

  .not-found-title {
    @apply mt-2 text-2xl font-semibold md:text-3xl;
    color: var(--color-text);
  }

  .not-found-message {
    @apply mb-8 max-w-md;
  }

  .not-found-text {
    @apply text-base leading-relaxed;
    color: var(--color-text-muted);
  }

  .not-found-actions {
    @apply flex flex-wrap items-center justify-center gap-3;
  }

  .btn-primary {
    @apply inline-flex items-center gap-2 rounded-md px-4 py-2 text-sm font-medium;
    background: var(--color-accent);
    color: white;
    transition: background-color 150ms ease;
  }

  .btn-primary:hover {
    background: var(--color-accent-hover);
  }
</style>
