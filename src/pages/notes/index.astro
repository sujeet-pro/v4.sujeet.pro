---
import Item from "@/components/item.astro"
import Link from "@/components/link.astro"
import Layout from "@/layout/layout.astro"
import { getCategoriesForType } from "@/utils/content-categories-generic.utils"
import { getNotes } from "@/utils/content-collection.utils"
import type { ContentItemWithoutContent } from "@/utils/content.type"

const notes = await getNotes()
const itemsWithoutContent = notes.map(({ Content: _, ...rest }) => rest) as ContentItemWithoutContent[]
const categories = await getCategoriesForType("notes", itemsWithoutContent)
const crumbs = null
---

<Layout title="Notes" description="Casual technical content - design docs, programming patterns, tools, and productivity" {crumbs} pageType="default">
  <h1 class="page-title">Notes</h1>
  <p class="page-description">Casual technical content - design docs, programming patterns, tools, and productivity.</p>

  <!-- Categories -->
  <section class="mb-12">
    <h2 class="section-title">Browse by Category</h2>
    <div class="grid gap-3 md:grid-cols-2 lg:grid-cols-3">
      {
        categories.filter((cat) => cat.items.length > 0).map((cat) => (
          <Link href={cat.href} class="category-card">
            <h3 class="category-card-title">{cat.name}</h3>
            <p class="category-card-count">{cat.items.length} {cat.items.length === 1 ? "article" : "articles"}</p>
          </Link>
        ))
      }
    </div>
  </section>

  <!-- All Entries -->
  <section>
    <h2 class="section-title">All Articles ({notes.length})</h2>
    {
      notes.length > 0 ? (
        <ul class="flex flex-col">
          {notes.map((item) => (
            <Item item={item} />
          ))}
        </ul>
      ) : (
        <p class="text-muted">No documents yet. Check back soon!</p>
      )
    }
  </section>
</Layout>
