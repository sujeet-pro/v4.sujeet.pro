---
/**
 * Article Component
 *
 * Wrapper for prose content on standalone article pages.
 * Uses .article-prose class from global.css for consistent styling.
 */

interface Props {
  title: string
  as?: "article" | "section"
}

const { as } = Astro.props as Props
const Element = as === "article" ? "article" : "section"
---

<Element class="article-prose">
  <slot />
</Element>
