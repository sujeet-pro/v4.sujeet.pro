---
import sujeetImage from "@/assets/sujeet.jpg"
import Link from "@/components/link.astro"
import { Icon } from "astro-icon/components"
---

<section class="profile">
  <div class="profile-container">
    <div class="profile-image-wrapper">
      <img
        src={sujeetImage.src}
        alt="Sujeet Jaiswal - Frontend Principal Engineer"
        class="profile-image"
      />
    </div>

    <div class="profile-header">
      <h1 class="profile-name">Sujeet Jaiswal</h1>
      <h2 class="profile-title">Frontend Principal Engineer</h2>
    </div>

    <div class="profile-bio">
      <p class="profile-bio-text">
        Crafting exceptional user experiences through innovative frontend architecture, scalable design systems, and
        cutting-edge web technologies. Leading teams to build products that users love.
      </p>
    </div>

    <div class="profile-actions">
      <Link href="/cv" class="btn-outline">
        <Icon name="carbon:document" class="icon-md" />
        View CV
      </Link>
      <Link href="/articles" class="btn-outline">
        <Icon name="carbon:blog" class="icon-md" />
        All Articles
      </Link>
    </div>

    <div class="profile-expertise">
      <h3 class="profile-expertise-title">Core Expertise</h3>
      <div class="profile-tags">
        <span class="tag">React & Next.js</span>
        <span class="tag">TypeScript</span>
        <span class="tag">Design Systems</span>
        <span class="tag">Performance</span>
        <span class="tag">Team Leadership</span>
        <span class="tag">Architecture</span>
      </div>
    </div>
  </div>
</section>
