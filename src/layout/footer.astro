---
// Simple footer component with social links
import Link from "@/components/link.astro";

interface Props {
  maxWidth?: string;
  class?: string;
}

const { maxWidth = "container", class: className } = Astro.props;
---

<footer class:list={["border-t", className]}>
  <div class={`${maxWidth} mx-auto px-4 py-8`}>
    <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
      <!-- Copyright -->
      <div class="text-center md:text-left">
        <p class="suppressed-text text-sm">
          Â© {new Date().getFullYear()} Sujeet Jaiswal. All rights reserved.
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        <Link
          href="https://github.com/sujeet-pro"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          title="GitHub"
          icon="devicon:github"
        />
        <Link
          href="https://www.linkedin.com/in/sujeetkrjaiswal/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          title="LinkedIn"
          icon="devicon-plain:linkedin"
        />
        <Link
          href="https://twitter.com/sujeetpro"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Twitter"
          title="Twitter"
          icon="devicon:twitter"
        />
      </div>
    </div>

    <!-- Additional Links -->
    <div class="mt-6 flex flex-col items-center gap-4 border-t pt-6 md:flex-row md:justify-between">
      <div class="suppressed-text flex flex-wrap items-center justify-center gap-4 text-sm md:justify-start">
        <Link href="/cv" target="_blank" rel="noopener noreferrer" icon="carbon:document-pdf"> Resume </Link>
        <span>|</span>
        <Link href="/download-cv" target="_blank" rel="noopener noreferrer" icon="carbon:document-pdf">
          Download CV
        </Link>
      </div>
    </div>
  </div>
</footer>
