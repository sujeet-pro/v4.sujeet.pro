---
// Simple footer component with social links
import Link from "@/components/link.astro"

interface Props {
  containerClassName: string
}

const { containerClassName } = Astro.props
---

<footer class:list={["sp-border-muted border-t"]}>
  <div class:list={["flex flex-col gap-4", containerClassName]}>
    <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
      <!-- Links -->
      <div class="flex flex-wrap items-center justify-center gap-4 text-sm font-light md:justify-start">
        <Link href="/cv"> Resume </Link>
        <Link href="/tag"> Tags </Link>
        <Link href="/series"> Series </Link>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        <Link
          href="https://github.com/sujeet-pro"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          title="GitHub"
          icon="devicon:github"
        />
        <Link
          href="https://www.linkedin.com/in/sujeetkrjaiswal/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          title="LinkedIn"
          icon="devicon-plain:linkedin"
        />
        <Link
          href="https://twitter.com/sujeetpro"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Twitter"
          title="Twitter"
          icon="devicon:twitter"
        />
      </div>
    </div>

    <!-- Copyright -->
    <div class="sp-border-muted border-t pt-4 text-center md:text-left">
      <p class="text-sm font-light">
        Â© {new Date().getFullYear()} Sujeet Jaiswal. All rights reserved.
      </p>
    </div>
  </div>
</footer>
