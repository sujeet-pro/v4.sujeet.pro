---
import { getAllCategories } from "@/utils/content"
import { getCopyright, getFooterLinks, getSocialLinks } from "@/utils/site.utils"
import Link from "@/components/link.astro"

// Get all categories
const categories = await getAllCategories()

// Get site config
const footerLinks = await getFooterLinks()
const social = await getSocialLinks()
const copyright = await getCopyright()

// Calculate copyright year display
const currentYear = new Date().getFullYear()
const yearDisplay = copyright.startYear === currentYear ? `${currentYear}` : `${copyright.startYear}-${currentYear}`
---

<footer class="site-footer">
  <div class="content-container site-footer-inner">
    {/* Categories Grid */}
    <nav class="site-footer-categories">
      {
        categories.map((cat) => (
          <Link href={`/articles/${cat.id}`} class="nav-link" title={cat.title}>
            {cat.name}
          </Link>
        ))
      }
    </nav>

    {/* Horizontal Bar: Footer Links + Social */}
    <div class="site-footer-bar">
      <div class="site-footer-links">
        {
          footerLinks.map((link) => (
            <Link href={link.path} class="nav-link">
              {link.label}
            </Link>
          ))
        }
      </div>
      <div class="site-footer-social">
        <Link
          href={social.github.url}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          title="GitHub"
          icon="devicon:github"
          class="nav-link"
        />
        <Link
          href={social.linkedin.url}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          title="LinkedIn"
          icon="devicon-plain:linkedin"
          class="nav-link"
        />
        <Link
          href={social.twitter.url}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Twitter"
          title="Twitter"
          icon="devicon:twitter"
          class="nav-link"
        />
      </div>
    </div>

    {/* Copyright */}
    <p class="site-footer-copyright">
      &copy; {yearDisplay}
      {copyright.holder}. All rights reserved.
    </p>
  </div>
</footer>
