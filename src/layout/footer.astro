---
import { getAllCategories } from "@/utils/content"
import { getCopyright, getFooterLinks, getSocialLinks } from "@/utils/site.utils"
import { getVanityUrlMap } from "@/utils/content-vanity.utils"
import Link from "@/components/ui/link.astro"
import { Icon } from "astro-icon/components"

// Get all categories
const categories = await getAllCategories()

// Get site config
const footerLinks = await getFooterLinks()
const social = await getSocialLinks()
const copyright = await getCopyright()
const vanity = await getVanityUrlMap()

// Calculate copyright year display
const currentYear = new Date().getFullYear()
const yearDisplay = copyright.startYear === currentYear ? `${currentYear}` : `${copyright.startYear}-${currentYear}`
---

<footer class="site-footer">
  <div class="site-footer-inner">
    {/* Categories */}
    <nav class="site-footer-categories">
      {
        categories.map((cat) => (
          <Link href={`/articles/${cat.id}`} class="nav-link" title={cat.title}>
            {cat.name}
          </Link>
        ))
      }
    </nav>

    {/* Bottom bar: Links + Theme + Social */}
    <div class="site-footer-bar">
      <div class="site-footer-links">
        {
          footerLinks.map((link) => {
            const vanityKey = link.path.replace(/^\/|\/$/g, "")
            const isVanity = vanity.has(vanityKey)
            return (
              <Link href={link.path} class="nav-link" isVanity={isVanity}>
                {link.label}
              </Link>
            )
          })
        }
      </div>

      <div class="site-footer-controls">
        {/* Theme Picker */}
        <div class="site-footer-theme">
          <Icon name="carbon:paint-brush" class="site-footer-theme-icon" />
          <select id="theme-select" class="site-footer-theme-select" aria-label="Select theme">
            <option value="auto">Auto</option>
            <option value="light">Light</option>
            <option value="dark">Dark</option>
            <option value="high-contrast-light">High contrast light</option>
            <option value="high-contrast-dark">High contrast dark</option>
            <option value="paper">Paper</option>
          </select>
        </div>

        {/* Social */}
        <div class="site-footer-social">
          <Link
            href={social.github.url}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            title="GitHub"
            icon="carbon:logo-github"
            class="site-footer-social-link"
          />
          <Link
            href={social.linkedin.url}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            title="LinkedIn"
            icon="carbon:logo-linkedin"
            class="site-footer-social-link"
          />
          <Link
            href={social.twitter.url}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Twitter"
            title="Twitter"
            icon="carbon:logo-twitter"
            class="site-footer-social-link"
          />
        </div>
      </div>
    </div>

    {/* Copyright */}
    <p class="site-footer-copyright">
      &copy; {yearDisplay}
      {copyright.holder}
    </p>
  </div>
</footer>
