---
// Simple footer component with social links
import Link from "@/components/link.astro";
import { Icon } from "astro-icon/components";

interface Props {
  maxWidth?: string;
}

const { maxWidth = "container" } = Astro.props;
---

<footer class="border-t border-primary-200 bg-white dark:border-primary-800 dark:bg-primary-950">
  <div class={`${maxWidth} mx-auto px-4 py-8`}>
    <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
      <!-- Copyright -->
      <div class="text-center md:text-left">
        <p class="text-sm text-primary-600/70 dark:text-primary-400/70">
          Â© {new Date().getFullYear()} Sujeet Jaiswal. All rights reserved.
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        <Link
          href="https://github.com/sujeet-pro"
          target="_blank"
          rel="noopener noreferrer"
          class="p-2 text-primary-600/60 transition-colors hover:text-primary-600 dark:text-primary-400/60 dark:hover:text-primary-400"
          aria-label="GitHub"
          title="GitHub"
        >
          <Icon name="devicon:github" />
        </Link>
        <Link
          href="https://www.linkedin.com/in/sujeetkrjaiswal/"
          target="_blank"
          rel="noopener noreferrer"
          class="p-2 text-primary-600/60 transition-colors hover:text-primary-600 dark:text-primary-400/60 dark:hover:text-primary-400"
          aria-label="LinkedIn"
          title="LinkedIn"
        >
          <Icon name="devicon:linkedin" />
        </Link>
        <Link
          href="https://twitter.com/sujeetpro"
          target="_blank"
          rel="noopener noreferrer"
          class="p-2 text-primary-600/60 transition-colors hover:text-primary-600 dark:text-primary-400/60 dark:hover:text-primary-400"
          aria-label="Twitter"
          title="Twitter"
        >
          <Icon name="devicon:twitter" />
        </Link>
      </div>
    </div>

    <!-- Additional Links -->
    <div
      class="mt-6 flex flex-col items-center gap-4 border-t border-primary-200 pt-6 md:flex-row md:justify-between dark:border-primary-800"
    >
      <div
        class="flex flex-wrap items-center justify-center gap-4 text-sm text-primary-600/60 md:justify-start dark:text-primary-400/60"
      >
        <Link
          href="/cv"
          target="_blank"
          rel="noopener noreferrer"
          class="transition-colors hover:text-primary-600 dark:hover:text-primary-400"
        >
          Resume
        </Link>
        <Link
          href="/download-cv"
          target="_blank"
          rel="noopener noreferrer"
          class="transition-colors hover:text-primary-600 dark:hover:text-primary-400"
        >
          Download CV
        </Link>
      </div>
    </div>
  </div>
</footer>
